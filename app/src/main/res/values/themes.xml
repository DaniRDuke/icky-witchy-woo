<resources xmlns:android="http://schemas.android.com/apk/res/android">
    
    <style name="Theme.UfoTheme" parent="@android:Theme.Holo">
  		<item name="android:actionBarStyle">@style/Widget.Ufo.ActionBar</item>
	</style>

	<style name="Widget.Ufo.ActionBar" parent="@android:style/Widget.Holo.ActionBar">
	    <item name="android:background">@drawable/ufo_action_bar_bg</item>
	</style>
    
    <style name="UfoDialog" parent="@android:style/Theme.Dialog"> 
        <item name="android:windowTitleStyle">@style/UfoDialogWindowTitle</item>
    </style> 

    <style name="UfoDialogWindowTitle" parent="@android:style/TextAppearance.DialogWindowTitle"> 
        <item name="android:textColor">@color/ufo_tab_highlight</item>
        <item name="android:textSize">24sp</item> 
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
    </style>	
        
</resources>