<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="horizontal" 
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:paddingLeft="0dp" >

    <ImageView
        android:id="@+id/userVideoThumbImageView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentLeft="true"
        android:contentDescription="@string/content_youtube_thumbnail_image" />
    
	<TextView android:id="@+id/userVideoTitle"
		android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/userVideoThumbImageView"
        android:textColor="@android:color/primary_text_dark"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
		android:paddingTop="5dp"
		android:textSize="15sp" />
		
	<TextView android:id="@+id/userVideoUpdateTime"
		android:layout_width="wrap_content"
		android:layout_height="fill_parent"
		android:layout_below="@id/userVideoTitle"
        android:layout_toRightOf="@id/userVideoThumbImageView"
		android:textColor="@android:color/secondary_text_dark"
		android:textSize="12sp"
		android:paddingBottom="3dp"
		android:paddingLeft="5dp"
		android:paddingRight="5dp" />
		
</RelativeLayout>